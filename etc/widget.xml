<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="acx_slider" class="Acx\Slider\Block\Widget\Slider">
        <label translate="true">Acx Slider Widget</label>
        <description>Choose a slideshow from: Admin » Content » Acx Slider</description>
        <parameters>            
            <parameter name="template" xsi:type="select" visible="true" required="true" sort_order="20">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="widget/slider.phtml" selected="true">
                        <label translate="true">Acx Slider</label>
                    </option>
                </options>
            </parameter>
            
            <parameter name="show_title" xsi:type="select"  visible="true" sort_order="30" required="true"
                       source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show Title</label>
            </parameter>
            <parameter name="title" xsi:type="text" visible="true" sort_order="40">
                <label translate="true">Title</label>
                <depends><parameter name="show_title" value="1" /></depends>
            </parameter>
            <parameter name="autoplay" xsi:type="select" visible="true" sort_order="50" required="true"
                       source_model="Magento\Config\Model\Config\Source\Enabledisable">
                <label translate="true">Autoplay</label>
            </parameter>
            <parameter name="slider_speed" xsi:type="text" visible="true" required="true" sort_order="60">
                <label translate="true">Autoplay Timeout</label>
                <depends><parameter name="autoplay" value="1" /></depends>
                <value>3000</value>
            </parameter>
            <parameter name="nav" xsi:type="select"  visible="true" sort_order="70" required="true"
                       source_model="Magento\Config\Model\Config\Source\Enabledisable">
                <label translate="true">Navigation</label>
            </parameter>
            <parameter name="nav_type" xsi:type="select" visible="true" sort_order="80" required="true">
                <label translate="true">Navigation Type</label>
                <depends><parameter name="nav" value="1" /></depends>
                <options>
                    <option name="dot" value="true" selected="true">
                        <label translate="true">Dot Navigations</label>
                    </option>
                    <option name="thumbnails" value="thumbnails">
                        <label translate="true">Thumbnail Navigations</label>
                    </option>
                </options>
            </parameter>
            <parameter name="nav_button" xsi:type="select"  visible="true" sort_order="90" required="true"
                       source_model="Magento\Config\Model\Config\Source\Enabledisable">
                <label translate="true">Show Next/Prev Buttons.</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
